        <Border Name="ChatScreen" 
                Background="RoyalBlue"
                Visibility="{Binding ChatScreenVisibility}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"
                                      MinWidth="120"
                                      MaxWidth="200"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0"
                        BorderThickness="3"
                        CornerRadius="20">
                    
                    <TextBlock Text="Contacts"
                               Style="{StaticResource HeaderBlock}"
                               Background="DeepSkyBlue"
                               FontSize="14"
                               TextAlignment="Center"
                               Height="30"
                               Width="Auto"
                               VerticalAlignment="Top"
                               HorizontalAlignment="Stretch"/>
                </Border>

                <Border Grid.Column="0"
                        BorderThickness="3">
                    <ListBox Name="ContactList"
                             Background="LightSkyBlue"
                             Height="Auto"
                             Margin="0 36 0 0"
                             VerticalAlignment="Stretch"
                             HorizontalAlignment="Stretch"
                             ScrollViewer.VerticalScrollBarVisibility="Auto"
                             ScrollViewer.CanContentScroll="True"
                             SelectionChanged="ContactList_SelectionChanged"
                             ItemsSource="{Binding Users}">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <ListBoxItem>
                                    <DockPanel LastChildFill="True">
                                        <TextBlock Text="{Binding Name}"
                                                   Foreground="Black"
                                                   DockPanel.Dock="Left"
                                                   FontSize="20"
                                                   HorizontalAlignment="Left"/>
                                    </DockPanel>
                                </ListBoxItem>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Border>

                <Border Grid.Column="1"
                        BorderThickness="3"
                        Background="LightSkyBlue">
                    <TextBlock Text="ChatApp"
                               Style="{StaticResource HeaderBlock}"
                               Background="DeepSkyBlue"
                               FontSize="14"
                               TextAlignment="Center"
                               Height="30"
                               Width="Auto"
                               VerticalAlignment="Top"
                               HorizontalAlignment="Stretch"/>
                </Border>

                <Border Grid.Column="1"
                        BorderThickness="3">
                    <ItemsControl Margin="0 36 0 36"
                             Background="LightSkyBlue"
                             VerticalAlignment="Stretch" 
                             BorderThickness="0"
                             ItemsSource="{Binding Messages}">
                        <ItemsControl.Template>
                            <ControlTemplate>
                                <ScrollViewer VerticalScrollBarVisibility="Auto"
                                              ScrollViewer.CanContentScroll="True">
                                    <ItemsPresenter/>
                                </ScrollViewer>
                            </ControlTemplate>
                        </ItemsControl.Template>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                    <Border Style="{StaticResource OtherToUser}"
                                            Background="{Binding Color}"
                                            HorizontalAlignment="{Binding Alignment}">
                                        <StackPanel Orientation="Vertical">
                                            <TextBlock Text="{Binding TextMessage}"
                                                       Style="{StaticResource OtherMessageText}"/>
                                            <TextBlock Text="{Binding MessageDate}"
                                                       Style="{StaticResource MessageDate}"/>
                                        </StackPanel>
                                    </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Border>

                <Border Grid.Column="1"
                        BorderThickness="3">
                    <TextBox Name="MessageTextBox"
                             Text="{Binding TextMessage}" 
                             TextWrapping="Wrap" 
                             TextAlignment="Justify"
                             VerticalAlignment="Bottom"
                             HorizontalAlignment="Stretch"
                             MinHeight="30"
                             Width="Auto"
                             Margin="0,0,76,0">
                        <!--<TextBox.InputBindings>
                            <KeyBinding Command="{Binding SendChatMessageCommand}"
                                        Key="Enter"/>
                        </TextBox.InputBindings>-->
                    </TextBox>
                </Border>

                <Border Grid.Column="1"
                        BorderThickness="3">
                    <Button Name="SendButton"
                            Content="Send" 
                            Style="{StaticResource ButtonBase}"
                            HorizontalAlignment="Right"  
                            VerticalAlignment="Bottom"
                            Padding="0 0"
                            Margin="0"
                            Height="30"
                            Width="70"
                            Command="{Binding SendChatMessageCommand}"/>
                </Border>

            </Grid>
        </Border>



    </Grid>
</Window>
